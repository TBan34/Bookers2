<div class="container">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <% form_with model :@user, url: '/users', method: :patch do |f| %>
        <label for="inputName">Name</label>
          <%= f.text_field :name, id:"inputName">
        <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, accept: "image/*" %>
        <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"inputIntroduction"%>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
