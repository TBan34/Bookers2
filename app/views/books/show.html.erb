      <%= render 'users/user_info', user: @user, book: @book, books: @books %>

      <h2>New book</h2>
      <%= form_with model: @book_new, url: '/books', method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book", class: "btn btn-success btn-sm" %>
      <% end %>
    </div>

    <div class="col-9">
      <h2>Book detail</h2>
      <table>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(72, 80) %>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @user == current_user %>
            <%= link_to "Edit", edit_book_path(@book), class: "btn-success btn-sm" %>
            <% end %>
          </td>
          <td>
            <% if @user == current_user %>
            <%= link_to "Destroy", book_path(@book), class: "btn-danger btn-sm", method: :delete, "data-confirm" => "本当に消しますか？" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

  </div>
</div>