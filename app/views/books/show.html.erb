<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(90, 100) %>
      <table>
        <tr>
          <th>name</th><th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th><th><%= @user.introduction %></th>
        </tr>
      </table>

      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <% if @user == current_user %>
            <%= link_to edit_user_path(@user), class: "nav-link btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </li>
      </ul>

      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_field :body %>
      <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-9">
      <h2>Book detail</h2>
      <table>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(72, 80) %>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book.id), class: "btn-success btn-sm" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), class: "btn-danger btn-sm", method: :delete %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

  </div>
</div>