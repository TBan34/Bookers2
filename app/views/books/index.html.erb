<table>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <h2>User info</h2>
        <!--ユーザー画像-->
        <!--ユーザー名-->
        <!--自己紹介文-->
        <h2>New book</h2>
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <h5>Title</h5>
