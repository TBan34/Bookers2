<div class="container">
  <div class="row">
    <div class="col-3" style="background-color:orange;">
      <h2>User info</h2>
        <%= image_tag "default-image", size:"100x100" %>
      <table>
        <tr>
          <th>name</th><th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
      </table>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_field :body %>
      <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-9">
      <h2>Books</h2>
    </div>
  </div>
</div>