<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(90, 100) %>
      <table>
        <tr>
          <th>name</th><th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th><th><%= current_user.introduction %></th>
        </tr>
      </table>

      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <% if current_user %>
            <%= link_to edit_user_path(current_user), class: "nav-link btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </li>
      </ul>

      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_field :body %>
      <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-9">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <%= @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user) do %><%= image_tag book.user.get_profile_image(72, 80) %><% end %></td>
            <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>